<!DOCTYPE html>
<html>
  <head>
    <title>My Posts</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 p-8">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="mb-6">
        <div class="flex justify-between items-center mb-4">
          <h1 class="text-3xl font-bold text-gray-800">My Posts</h1>
          <div class="flex gap-4">
            <a href="/" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
              View Public Posts
            </a>
            <form action="/logout" method="POST" class="inline">
              <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
                Logout
              </button>
            </form>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow-md p-4 mb-4">
          <span class="text-sm text-gray-600">Logged in as: </span>
          <span class="font-semibold text-gray-800"><%= user.name %></span>
          <span class="text-sm text-gray-500"> (<%= user.email %>)</span>
          <span class="ml-2 px-2 py-1 text-xs font-semibold rounded <%= user.role === 'ADMIN' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
            <%= user.role %>
          </span>
        </div>
        <a href="/dashboard/posts/new" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 inline-block">
          + Create New Post
        </a>
      </div>

      <!-- Posts List -->
      <% if (posts && posts.length > 0) { %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-100">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Content Preview</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Comments</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% posts.forEach(function(post) { %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4">
                    <a href="/posts/<%= post.id %>" class="text-blue-600 hover:text-blue-800 font-medium">
                      <%= post.title %>
                    </a>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-700">
                    <%= post.content.length > 100 ? post.content.substring(0, 100) + '...' : post.content %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= new Date(post.createdAt).toLocaleDateString() %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= post.comments ? post.comments.length : 0 %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex gap-2">
                      <a href="/posts/<%= post.id %>" class="text-blue-600 hover:text-blue-900">View</a>
                      <span class="text-gray-300">|</span>
                      <a href="/dashboard/posts/<%= post.id %>/edit" class="text-green-600 hover:text-green-900">Edit</a>
                      <span class="text-gray-300">|</span>
                      <form action="/dashboard/posts/<%= post.id %>/delete" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this post?');">
                        <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="bg-white rounded-lg shadow-md p-8 text-center">
          <p class="text-gray-500 text-lg mb-4">You haven't created any posts yet.</p>
          <a href="/dashboard/posts/new" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 inline-block">
            Create Your First Post
          </a>
        </div>
      <% } %>
    </div>
  </body>
</html>