<!DOCTYPE html>
<html>
  <head>
    <title>Latest Posts</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 p-8">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Latest Posts</h1>
        <div class="flex gap-4">
          <% if (user) { %>
            <a href="/dashboard" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
              My Dashboard
            </a>
            <form action="/logout" method="POST" class="inline">
              <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
                Logout
              </button>
            </form>
          <% } else { %>
            <a href="/login" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
              Login
            </a>
            <a href="/register" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
              Register
            </a>
          <% } %>
        </div>
      </div>

      <!-- Posts List -->
      <% if (posts && posts.length > 0) { %>
        <div class="space-y-6">
          <% posts.forEach(function(post) { %>
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
              <div class="flex justify-between items-start mb-3">
                <h2 class="text-2xl font-bold text-gray-800">
                  <a href="/posts/<%= post.id %>" class="hover:text-blue-600 transition-colors">
                    <%= post.title %>
                  </a>
                </h2>
                <span class="text-sm text-gray-500">
                  <%= new Date(post.createdAt).toLocaleDateString() %>
                </span>
              </div>
              <p class="text-gray-700 mb-4 line-clamp-3">
                <%= post.content.length > 200 ? post.content.substring(0, 200) + '...' : post.content %>
              </p>
              <div class="flex justify-between items-center">
                <div class="text-sm text-gray-600">
                  <span class="font-semibold">By:</span> <%= post.author.name %>
                </div>
                <a href="/posts/<%= post.id %>" class="text-blue-500 hover:text-blue-600 font-semibold">
                  Read more â†’
                </a>
              </div>
              <% if (post.comments && post.comments.length > 0) { %>
                <div class="mt-3 text-sm text-gray-500">
                  <%= post.comments.length %> comment<%= post.comments.length !== 1 ? 's' : '' %>
                </div>
              <% } %>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="bg-white rounded-lg shadow-md p-8 text-center">
          <p class="text-gray-500 text-lg">No posts available yet.</p>
          <% if (user) { %>
            <a href="/dashboard/posts/new" class="inline-block mt-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
              Create First Post
            </a>
          <% } %>
        </div>
      <% } %>
    </div>
  </body>
</html>