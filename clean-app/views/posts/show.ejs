<!DOCTYPE html>
<html>
  <head>
    <title><%= post.title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 p-8">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="mb-6">
        <a href="/" class="text-blue-500 hover:text-blue-600 mb-4 inline-block">← Back to Posts</a>
        <div class="flex justify-between items-center">
          <h1 class="text-3xl font-bold text-gray-800">Post Details</h1>
          <% if (user) { %>
            <div class="flex gap-4">
              <a href="/dashboard" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
                Dashboard
              </a>
              <form action="/logout" method="POST" class="inline">
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
                  Logout
                </button>
              </form>
            </div>
          <% } else { %>
            <a href="/login" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
              Login
            </a>
          <% } %>
        </div>
      </div>

      <!-- Post Content -->
      <div class="bg-white rounded-lg shadow-md p-8">
        <div class="mb-6">
          <h2 class="text-4xl font-bold text-gray-800 mb-4"><%= post.title %></h2>
          <div class="flex items-center gap-4 text-sm text-gray-600 mb-4">
            <span class="font-semibold">Author:</span>
            <span><%= post.author.name %></span>
            <span class="text-gray-400">•</span>
            <span><%= new Date(post.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
            <% if (post.updatedAt && post.updatedAt.getTime() !== post.createdAt.getTime()) { %>
              <span class="text-gray-400">•</span>
              <span class="text-gray-500 italic">Updated: <%= new Date(post.updatedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
            <% } %>
          </div>
        </div>

        <div class="prose max-w-none">
          <div class="text-gray-700 whitespace-pre-wrap leading-relaxed"><%= post.content %></div>
        </div>
      </div>

      <!-- Comments Section -->
      <div class="bg-white rounded-lg shadow-md p-8 mt-6">
        <h3 class="text-2xl font-bold text-gray-800 mb-6">
          Comments 
          <span class="text-gray-500 text-lg">(<%= post.comments ? post.comments.length : 0 %>)</span>
        </h3>
        
        <% if (post.comments && post.comments.length > 0) { %>
          <div class="space-y-4">
            <% post.comments.forEach(function(comment) { %>
              <div class="border-l-4 border-blue-500 pl-4 py-2">
                <div class="flex items-center gap-2 mb-2">
                  <span class="font-semibold text-gray-800"><%= comment.author.name %></span>
                  <span class="text-sm text-gray-500">
                    <%= new Date(comment.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                  </span>
                </div>
                <p class="text-gray-700"><%= comment.content %></p>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="text-gray-500 italic">No comments yet. Be the first to comment!</p>
        <% } %>
      </div>
    </div>
  </body>
</html>